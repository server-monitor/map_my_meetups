<h2>Log in</h2>

<%= form_for(
      resource, as: resource_name, url: session_path(resource_name),
      html: { class: 'form-horizontal' }
    ) do |f| %>
  <%= form_group_for f, :email do
        field_for f, :email_field, :email, autofocus: true
      end
  %>

  <%= password_form_group_for f %>

  <% if devise_mapping.rememberable? -%>
    <%= form_group_for(
          f, :remember_me
        ) do
          f.check_box :remember_me, id: 'remember_me_check_box'
        end
    %>
  <% end -%>

  <%= button_for f, :submit, 'Log in' %>
<% end %>

<%= render "devise/shared/links" %>
