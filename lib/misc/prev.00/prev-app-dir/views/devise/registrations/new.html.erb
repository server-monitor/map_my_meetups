<h2>Sign up</h2>

<%= form_for(
      resource, as: resource_name, url: registration_path(resource_name),
      html: { class: 'form-horizontal' }
    ) do |f| %>
  <%= devise_error_messages! %>

  <%= form_group_for f, :email do
        field_for f, :email_field, :email, autofocus: true
      end
  %>

  <%= form_group_for f, :name %>

  <%= password_form_group_for f, minimum_password_length: @minimum_password_length %>
  <%= password_form_group_for f, :password_confirmation %>
  <%= button_for f, :submit, 'Sign up' %>
<% end %>

<%= render "devise/shared/links" %>
